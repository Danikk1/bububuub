<Window x:Class="Laba5._2.FirstWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba5._2"
        mc:Ignorable="d"
        Title="FirstWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"  Background= "purple" Content="Роли" Click="Button_Click"/>
            <Button Grid.Column="1" Background= "purple" Content="Сотрудники" Click="Button_Click_1"/>
            <Button Grid.Column="2" Background= "purple" Content="Данные для авторизации" Click="Button_Click_2"/>
        </Grid>
        <Frame x:Name="Admin" Grid.Row="1"/>
    </Grid>
</Window>
